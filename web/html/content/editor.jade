include rich_editor

#content_editor.modal.modal-full.hide.fade(aria-labelledby='content_editor_title', aria-hidden='true')
  .modal-header
    button.close(type='button', data-dismiss='modal', aria-hidden='true') &times;
    h3#content_editor_title Content Editor
  .modal-body
    form.form-horizontal
      .control-group
        label.control-label(for='page_title') Page Title
        .controls
          input#page_title.input-large(type='text', placeholder='The title of the page', name='page_title', maxlength='255')
      .control-group
        label.control-label(for='page_title') Page Description
        .controls
          mixin rich_editor('page_desc')
      section#section_1
        legend
          label(for='section_1_title') New Section
        .control-group
          label.control-label(for='section_1_title') Section Title
          .controls
            input#section_1_title.input-large(type='text', placeholder='The title of the section', name='section_1_title', maxlength='255')
        .control-group
          label.control-label(for='section_1_desc') Section Description
          .controls
            textarea#section_1_desc.input-block-level(rows=3, placeholder='The description of the section', name='section_1_title', maxlength='65535')
        .control-group
          label.control-label(for='page_title') Section Type
          .controls
            select#section_type.input-xlarge(name='section_1_type')
              option(checked) Description Only (No Question)
              option(value='text') Simple Text
              option(value='html') Rich Text
              option(value='radio') Multiple Selection
              option(value='file') File Upload

        .control-group
          label.control-label(for='multiline_text') Multiple Line
          .controls
            input#multiline_text(type='checkbox')

        .control-group
          label.control-label(for='file_accept') File Type
          .controls
            select#file_accept
              option(checked) Any
              option(value='image/*') Image Only
              option(value='video/*') Video Only
              option(value='audio/*') Audio Only
              option(value='audio/*|video/*|image/*') Image, Video or Audio

        .control-group
          label.control-label(for='gen_from_list') Auto Generate Rows
          .controls
            input#gen_from_list(type='checkbox', title='Generate rows from a list')
            input#gen_list_key(type='text')
        .control-group
          label.control-label Options
          .controls
            label
              input(type='radio', disabled)
              input(type='text')
            label
              input(type='radio', disabled)
              input(type='text')

      button#new_section.btn.btn-info.btn-round(type='button', title='Add a new section') +

      section#section_1
        legend
          label Submit Options
        .control-group
          label.control-label(for='next_page_type') Next Page Type
          .controls
            label
              input(type='radio', name='next_page_type', value='thanks', checked)
              | Thanks Only
            label
              input(type='radio', name='next_page_type', value='results', disabled)
              | Results Page
            label
              input(type='radio', name='next_page_type', value='page')
              | Another Page
            label
              input(type='radio', name='next_page_type', value='url')
              | Jump to URL
        .control-group
          label.control-label(for='another_response') Allow Another Response
          .controls
            input#another_response(type='checkbox', name='another_response')
        .control-group
          label.control-label(for='next_page_key') Next Page Key
          .controls
            input#next_page_key(type='text', name='next_page_key')
        .control-group
          label.control-label(for='next_page_url') Next Page URL
          .controls
            input#next_page_url(type='url', name='next_page_url')

  .modal-footer
    button.btn(data-dismiss='modal', aria-hidden='true') Close
    button.btn.btn-primary.btn-save Save
