.span2.sidebar
  .well.sidebar-nav
    ul.project-list.sidebar-list.nav.nav-list
      li.nav-header Projects
      li
        a(href='#project:all') All
    ul.sidebar-bottom.nav.nav-list
      li.divider
      li.nav-header Tips
      li.tips
        | Click Project List above to filter by project,
        | or click Tabs above to filter by media.
.span10.workspace
  #content_view.content-view
    ul.action-bar
      li.action-buttons.pull-right
        button.btn.icon-refresh(name='reload', title='Reload Table') Reload
      li.pull-left
        ul.media-filter.nav.nav-pills
          li.active
            a(href='#type:all') All
          li
            a.icon-page(href='#type:page') Page
          li
            a.icon-facebook(href='#type:facebook') Facebook
          li
            a.icon-twitter(href='#type:twitter') Twitter
          li
            a.icon-mail(href='#type:email') Email
      li.grid-filter
    #t_content_action_cell.tpl
      a.btn.btn-success.btn-round.icon-report(title='View report', name='report')
      a.btn.btn-primary.btn-round.icon-edit(title='Edit', name='edit', href='#content/{{id}}')
      a.btn.btn-info.btn-round.icon-view(title='Preview', name='preview', href='#content/{{id}}/preview')
      a.btn.btn-round.icon-link-ext(title='View post in new window', name='view', target='_blank')
      button.btn.btn-danger.btn-round.icon-block(title='Block (Stop Posting)', name='block')
      button.btn.btn-success.btn-round.icon-undo(title='Unblock (Post)', name='unblock')
    .grid-scroller
      table#content_table.grid-table
        caption.loading.icon-spinner.animate-spin
    .grid-paginator

include editor
