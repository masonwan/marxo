  .page-header
    .wf-actions.pull-right.btn-group
      a.btn(href='#workflow/mgr') Back to List
      button.btn.btn-danger.wf-reset Reset
      button.btn.btn-primary.wf-save Save
    h3
      span.editable-title(title='Change Workflow Title', contenteditable='true')
