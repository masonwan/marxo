#link_editor.modal.hide.fade(aria-labelledby='link_editor_title', aria-hidden='true')
  .modal-header
    button.close(type='button', data-dismiss='modal', aria-hidden='true') Ã—
    h3#link_editor_title Link Editor
  .modal-body
    form.form-horizontal
      .control-group
        label.control-label(for='link_title') Title
        .controls
          input#link_title(type='text', name='title', placeholder='Node Name')
      .control-group
        label.control-label(for='link_name') Name
        .controls
          input#link_name(type='text', name='name', placeholder='link_name')
      .control-group
        label.control-label(for='link_desc') Description
        .controls
          textarea#link_desc(name='desc', cols='30', rows='3', placeholder='Description')
  .modal-footer
    button.btn(data-dismiss='modal', aria-hidden='true') Close
    button.btn.btn-primary(data-action='save') Save
